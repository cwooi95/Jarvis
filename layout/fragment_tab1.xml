<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tab1">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=" "
        android:textSize="30dp" />


    <TextView
        android:id="@+id/property1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:text="Property 1"
        android:textColor="#000000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tenant1name"
        android:text="Tenant Name"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="130dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/tenant1"
        android:src="@drawable/tenant1"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="130dp" />

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:saveEnabled="true"
        android:numStars="5"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="70dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paymenydue"
        android:text="Payment due:
        Tenant 1: $750.00 Paid
        Tenant 2: $1000.00 Due at 7th/Oct
        Tenant 3: $850.00 Paid"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:ems="8"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true" />




</RelativeLayout>